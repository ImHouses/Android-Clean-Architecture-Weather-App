<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end_forecast"
        motion:constraintSetStart="@id/start_forecast"
        motion:duration="400">
       <OnSwipe
           motion:touchAnchorId="@+id/buttonMainSwipeForecast"
           motion:touchAnchorSide="top"
           motion:dragDirection="dragUp"/>
    </Transition>

    <ConstraintSet android:id="@+id/start_forecast">
        <Constraint
            android:id="@+id/buttonMainSwipeForecast"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0"/>
        </Constraint>
        <Constraint
            android:id="@+id/linearMainForecast"
            android:visibility="invisible"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end_forecast">
        <Constraint
            android:id="@+id/buttonMainSwipeForecast"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1"/>
        </Constraint>
        <Constraint
            android:id="@+id/linearMainForecast"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@id/buttonMainSwipeForecast"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"/>
    </ConstraintSet>
</MotionScene>