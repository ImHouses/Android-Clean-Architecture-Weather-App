<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forecastItem"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorPrimary"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/forecast_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lunes"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/forecast_item_icon"
                android:src="@drawable/ic_sun"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/forecast_item_date"
                android:layout_marginTop="21dp" />

            <TextView
                android:id="@+id/forecast_item_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/forecast_item_icon"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_toEndOf="@+id/forecast_item_icon"
                android:layout_toRightOf="@+id/forecast_item_icon"
                android:text="23"
                android:textColor="@color/colorBlack"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/forecast_item_temp_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:layout_alignTop="@+id/forecast_item_temp"
                android:layout_toRightOf="@+id/forecast_item_temp"
                android:layout_toEndOf="@+id/forecast_item_temp" />

            <TextView
                android:id="@+id/forecast_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nublado"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/forecast_item_icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/forecast_item_temp"
                android:layout_alignEnd="@+id/forecast_item_temp" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/forecast_item_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:text="Temperatura máxima\n20°C"
                android:textStyle="bold"
                android:layout_marginTop="31dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/forecast_item_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Temperatura mínima\n12°C"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/forecast_item_max"
                android:layout_alignLeft="@+id/forecast_item_max"
                android:layout_alignStart="@+id/forecast_item_max"
                android:textAlignment="center"
                android:layout_marginTop="23dp" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>